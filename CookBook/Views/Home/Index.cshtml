@model List<CookBook.Models.RecipeModel>

@{
    ViewData["Title"] = "Home Page";
}

    @if (Model.Count() > 0)
{
    <div class="text-center" style="margin-top: 50px;">
        <div id="recipe-carousel" class="carousel carousel-dark slide" data-bs-ride="false">
            <div class="carousel-inner">
                @for (int i = 0; i < 10; i++)
                {
                    if (i == 0)
                    {
                            <div class="carousel-item active">
                                <a asp-controller="Recipe" asp-action="GetRecipe" asp-route-id="@Model[i].Id" style="color:#394a51; text-decoration:none">
                                    <img class="card-img-top" style="width:30%" src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Picture of @Model[i].Name">
                                    <h2>@Model[i].Name</h2>
                                <p style="width:40%; margin:auto">@Model[i].Description</p>
                                </a>
                            </div>
                    }
                    else
                    {

                            <div class="carousel-item">
                                <a asp-controller="Recipe" asp-action="GetRecipe" asp-route-id="@Model[i].Id" style="color:#394a51; text-decoration:none">
                                    <img class="card-img-top" style="width:30%" src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Picture of @Model[i].Name">
                                    <h2>@Model[i].Name</h2>
                                    <p style="width:40%; margin:auto">@Model[i].Description</p>
                                </a>
                            </div>
                    }

                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#recipe-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#recipe-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    
    
}
else {
    <a asp-controller="Recipe" asp-action="CreateRecipe" class="btn" style="margin-bottom: 15px; background-color:#fdc57b">
        <i class="bi bi-plus-circle"></i> &nbsp; Add New Recipe
    </a>
}