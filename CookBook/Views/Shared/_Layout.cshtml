<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CookBook.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow" style="padding:0;">
            <div class="container-fluid" style="background-color:#394a51; padding-top:10px; padding-bottom:10px; color:#fbf2d5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: #fbf2d5">CookBook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Recipe" asp-action="Index" style="color: #fbf2d5">Recipes</a>
                        </li>
                        <li>
                            <div class="dropdown">
                                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" style="color: #fbf2d5">
                                    Categories
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach (var item in (List<CategoryModel>)ViewBag.Categories)
                                    {
                                        <li><a class="dropdown-item" asp-controller="Recipe" asp-action="GetRecipesByCategory" asp-route-id="@item.Id">@item.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </li>
                        
                    </ul>
                </div>
                <partial name="_LoginPartial"/>
            </div>
        </nav>
    </header>
    <div class="container" style="padding-top: 15px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#7fa99b">
        <div class="container">
            &copy; @DateTime.Now.Year - CookBook
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
